---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Blog - Cristian Baeza Torres">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Blog</h1>
    
    <div class="space-y-6">
      <article class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-2">
          <a href={`${base}/blog/transcripcion-automatica`} class="hover:text-blue-600">
            Transcripción Automática
          </a>
        </h2>
        <p class="text-gray-600 text-sm mb-3">15 de Septiembre, 2021</p>
        <p class="text-gray-700">
          Explorando herramientas de transcripción automática para investigación cualitativa.
        </p>
      </article>

      <article class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-2">
          <a href={`${base}/blog/tesis-post`} class="hover:text-blue-600">
            Proyecto de Tesis
          </a>
        </h2>
        <p class="text-gray-600 text-sm mb-3">15 de Febrero, 2022</p>
        <p class="text-gray-700">
          Detalles sobre mi proyecto de investigación y metodología.
        </p>
      </article>
    </div>
  </div>
</Layout>
